@model IEnumerable<SchoolApp.Models.Classroom>

@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class="icon-plus"></i> New Classroom</a>
</p>
<div class="well">
<table class="table table-stripped datatable">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
			<a href="@Url.Action("Edit", new { id=item.ClassroomID })" rel="tooltip" data-toggle="tooltip" title="Edit record"><i class="icon-pencil"></i></a>
            <a href="@Url.Action("Details", new { id=item.ClassroomID })" rel="tooltip" data-toggle="tooltip" title="View details"><i class="icon-tasks"></i></a>
            <a href="@Url.Action("Delete", new { id=item.ClassroomID })" rel="tooltip" data-toggle="tooltip" title="Remove record"><i class="icon-remove"></i></a>
        </td>
    </tr>
}

</table>
      </div>